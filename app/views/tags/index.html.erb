
<div id="map"
   style="width: 100%; height: 70vh;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<% if params[:query].present? && params[:secondquery].present? %>
  <h2>showing results for <%= params[:query]%> and <%= params[:secondquery] %></h2>

<% elsif params[:query].present? %>
  <h2>showing results for your search <%= params[:query]%></h2>

  <div class= "searchbar">
    <div class= "searchbar-picto"> <%= image_tag "mask.png", class: "image-small-32" %> </div>
      <%= form_tag tags_path, class: "simple_form search w-100", method: :get do %>
        <%= hidden_field_tag :query,  params[:query] %>
        <div class="search-form-control form-group">
         <input class="form-control string required" placeholder= "Type a second species" type="text" name="secondquery" id="secondquery" />
         <button name="button" type="submit" class="btn btn-flat">
         <i class="fas fa-search"></i>
         </button>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <h2>showing all available results</h2>

<% end %>
