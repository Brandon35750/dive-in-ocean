
<div class="container">
  <h1>Put on your bottle and approch me!</h1>
</div>

<div class="container">
  <form novalidate="novalidate" class="simple_form search" action="/species" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="query" id="str" />
      <button name="button" type="submit" class="btn btn-dark">
        <i class="fas fa-search"></i> Add a species to the map
      </button>
    </div>
  </form>
</div>


<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>



