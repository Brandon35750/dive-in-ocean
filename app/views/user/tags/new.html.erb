
<div class="addadive">

  <div class="row no-padding">

    <div class="col-8 nopadding">
      <div id="map-new-tag"
           style="height: 100vh"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

    <div class="col-4 nopadding edit-form" style="height: 100vh">
      <div class="input-bloc">
        <h1>Post your new dive</h1>
      </div>
      <div class="form-dive">
        <%= simple_form_for [:user, @tag] do |f| %>
        <%= f.input :diving_date, as: :date, html5: true, label: "When did you dive?", input_html: { class: "bar" } %>
        <%= f.input :spot_name, label: "Where was it?", input_html: { class: "bar" } %>
        <%= f.input :latitude, input_html: { class: "bar" } %>
        <%= f.input :longitude, input_html: { class: "bar" } %>
        <%= f.association :species, label: "What species have you observed?", input_html: { class: "bar" } , label_html: { class: "white-text" }%>
        <%= f.input :depth, label: "At what depth?", input_html: { class: "bar" }, label_html: { class: "white-text" } %>
        <%= f.input :description, label: "Tell us more!", label_html: { class: "white-text" }, input_html: { class: "white-text" } %>
        <%= f.input :photo, label: "Did you take a picture?", as: :file, label_html: { class: "white-text" } %>
        <div class="form-dive-btn">
          <button type="submit" class="form-btn-fa add-a-dive">
            <i class="fas fa-plus-circle"></i>
          </button>

          <!-- <button type="reset" class="test">
            <i class="fas fa-undo-alt"></i>
          </button> -->

          <%= link_to tags_path, class: "form-btn-fa" do%>
             <i class="fas fa-undo-alt"></i>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>

  </div>

</div>


