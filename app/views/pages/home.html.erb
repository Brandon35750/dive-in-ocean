
<div class= "banner text-center">
  <div class= "title-banner">
    <h1>Let's go and approach a species on the map!</h1>
  </div>

  <div class= "searchbar">
    <div class= "searchbar-picto"> <%= image_tag "mask.png", class: "image-small-32" %> </div>
      <%= form_tag tags_path, class: "simple_form search w-100", method: :get do %>
       <div class="search-form-control form-group">
         <input class="form-control string required" placeholder= "Type the species you dream of approaching" type="text" name="query" id="query" />
         <button name="button" type="submit" class="btn btn-flat">
         <i class="fas fa-search"></i>
         </button>
        </div>

      <% end %>
    </div>
  </div>
</div>





<div id="carouselExampleSlidesOnly" class="carousel-slide" data-ride="carousel">
  <div class="carousel-inner">
    <h2>No idea ? let us guide you to one of these wonderful species...</h2>

    <div class="container my-4 carou">


    <!--Carousel Wrapper-->
    <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">

      <!--Controls-->
      <div class="controls-top">
        <a class="btn-floating" href="#multi-item-example" data-slide="prev"><i class="fa fa-chevron-left"></i></a>
        <a class="btn-floating" href="#multi-item-example" data-slide="next"><i class="fa fa-chevron-right"></i></a>
      </div>
      <!--/.Controls-->

      <!--Indicators-->
      <%# <ol class="carousel-indicators">
        <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
        <li data-target="#multi-item-example" data-slide-to="1"></li>
        <li data-target="#multi-item-example" data-slide-to="2"></li>
      </ol> %>
      <!--/.Indicators-->

      <!--Slides-->
      <div class="carousel-inner" role="listbox">

        <!--First slide-->
        <div class="carousel-item active">
          <div class="row">
            <% @species.first(3).each do |species| %>
              <div class="col-md-4">
                <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path species.photo.key %>)">
                      <h3><%= species.name %></h3>
                    <div class="onglet">
                      <h2 class="where"> <%= link_to "Where am I?", tags_path(query: species.name)%></h2>
                      <h2 class="info"><%= link_to "More Info about me", species_path(species.id)%></h2>
                    </div>
                  </div>
              </div>
            <% end %>
          </div>
        </div>

        <!--/.First slide-->
        <% @species[3..-1].each_slice(3) do |species_slice| %>
          <div class="carousel-item">
            <div class="row">
              <% species_slice.each  do |species| %>
              <div class="col-md-4">
                <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path species.photo.key %>)">
                      <h3><%= species.name %></h3>
                    <div class="onglet">
                      <h2 class="where"> <%= link_to "Where am I?", tags_path(query: species.name)%></h2>
                      <h2 class="info"><%= link_to "More Info about me", species_path(species.id)%></h2>
                    </div>
                  </div>
              </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <!--/.Slides-->

    </div>
    <!--/.Carousel Wrapper-->

  </div>
    <div class= "corailpic" id="about">
      <%= image_tag "coraux3.png", class: "corail" %>
    </div>
  </div>
</div>


