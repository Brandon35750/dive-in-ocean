<div class="container-species">
  <div class="img-species">
    <div id="map"
      style="width: 100%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
    <div class="rigth-description p-4 text-center">
      <div class="div-btn-previous">
        <a href="javascript:history.go(-1)">X</a>
      </div>
      <div class="name-center-user" id="footer">
        <h3 class="photo-user"><%= cl_image_tag @user.avatar.key %></h3>
        <h1><%=@user.first_name%></h1>
      </div>
      <div class="container-description-user" id="footer">
        <h3><%=@user.description%></h3>
      </div>
      <div class="name-center-item">

        <div class="tiret">
          <h3>Username</h3>
          <h4><%=@user.username%></h4>

        </div>
        <div class="tiret">
          <h3>Level</h3>
          <h4><%=@user.diving_level%></h4>
        </div>
        <div class="tiret">
          <h3>Last name</h3>
        <h5><%=@user.last_name%></h5>
        </div>
      </div>

      <div class="btn btn-show">
        <%= link_to "Edit my profile", edit_user_path(current_user.id)%>
      </div>

      <div class=div-img>
        <div class="img-tag ">
          <h3>Last tag of <%=@user.first_name%></h3>
        </div>
        <div class="card-show">
          <%@user.tags.sort_by(&:created_at).reverse.first(3).each do |tag| %>
          <div class="card-product">
             <% if tag.photo.attached? %>
              <img><%= cl_image_tag tag.photo.key %>
             
             <% end %>
             <%= tag.description %>
          </div>
          <% end %>
      </div>
    </div>
</div>
</div>



